{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/((?!api|uploads|assets|favicon.ico).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "server/data/**"
        }
    }
}