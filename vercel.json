{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "public/uploads/**",
                    "data/**",
                    "server/data/**"
                ]
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/server/index.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/((?!api|uploads|assets|favicon.ico).*)",
            "dest": "/index.html"
        }
    ]
}